{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./bin",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "incremental": true
  },
  "exclude": [
    "node_modules/"
  ]
}